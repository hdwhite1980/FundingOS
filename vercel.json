{
  "crons": [
    {
      "path": "/api/sync/grants-gov",
      "schedule": "0 11 * * *",
      "description": "Daily sync of federal grant opportunities at 6 AM EST (11 UTC)"
    },
    {
      "path": "/api/data/sync-opportunities",
      "schedule": "0 2 * * *",
      "description": "Legacy sync endpoint - keep for backward compatibility"
    }
  ],
  "functions": {
    "app/api/sync/grants-gov/route.ts": {
      "maxDuration": 60
    },
    "pages/api/data/sync-opportunities.js": {
      "maxDuration": 300
    },
    "pages/api/ai/analyze-opportunity.js": {
      "maxDuration": 60
    },
    "pages/api/ai/generate-application.js": {
      "maxDuration": 120
    }
  }
}